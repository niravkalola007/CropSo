<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView

        android:id="@+id/card_view"
                android:layout_marginTop="8dp"

        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/normal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="#494949"
        android:text="Notification Title"
        android:textSize="@dimen/normal_text"
        android:textStyle="bold"
        android:id="@+id/txtNotificationTitle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_gravity="center"
        android:textColor="#494949"
        android:text="11/10/1991"
        android:textSize="@dimen/small_text"
        android:id="@+id/txtNotificationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>


            <TextView
                android:layout_marginTop="@dimen/small_margin"
                android:textColor="#494949"
                android:text="Notification Details: It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout"
                android:textSize="@dimen/normal_text"
                android:id="@+id/txtNotificationMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>